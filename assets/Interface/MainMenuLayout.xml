<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="main" controller="game.state.menu.MainMenuState">
        <layer id="foreground" childLayout="center">
            <panel id="panel_background" backgroundColor="#000000ff" padding="100" width= "100%" height="100%" childLayout="center">
                <control name="label" valign="top" color="#ffffffff" text="Crossing Swords ver 0.1"></control>
               <panel id="panel_center" backgroundColor="#a9a9a988" width="500" height="300" childLayout="vertical">
                   <panel id="button_panel_1" height="25%" width="100%" valign="top" childLayout="center">
                        <control id="play" name="button" label="Play" />
                   </panel>

                   <panel id="button_panel_3" height="25%" width="100%" childLayout="center">
                       <control id="options" name="button" label="Options"/>
                   </panel>
                   
                   <panel id="button_panel_2" height="25%" width="100%" childLayout="center">
                       <control id="exit" name="button" label="Exit"/>
                   </panel>
                   
                                      
                   <panel id="button_panel_center" height="25%" width="100%" childLayout="center">
                       <control id="doSomethingElse" width="200" name="button" label="Do Something Else"/>
                   </panel>
                   
               </panel>
                <!-- 

                <panel id="panel_middle" backgroundColor="#1240abff" width="*" height="33%" childLayout="center">

                    

                </panel>

                <panel id="panel_bottom" backgroundColor="#ffff00ff" width="*" height="*" childLayout="center">

                    

                </panel>-->

            </panel>
        </layer>
    </screen>

</nifty>
